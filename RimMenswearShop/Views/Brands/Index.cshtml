@model IEnumerable<Brand>
@{
    ViewBag.Title = "Quản lý danh mục";
}
<a asp-controller="Brands" asp-action="Create" class="btn btn-dark mb-3"><i class="fa fa-plus"></i>Thêm thương hiệu</a>
<table class="table table-hover table-responsive table-bordered display w-100 d-block d-md-table" id="brandsTable">
    <thead>
        <tr class="thead-dark">
            <th>ID</th>
            <th>Tên thương hiệu</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Brands" asp-action="Edit" asp-route-id="@brand.BrandId">@brand.BrandId</a>
                </td>
                <td>@brand.Name</td>
                <td>
                    <a asp-controller="Brands" asp-action="Edit" asp-route-id="@brand.BrandId" title="Chỉnh sửa" class="btn btn-dark">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{

    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script src="~/js/Category.js" asp-append-version="true"></script>
}

@section datatablejs{
    <environment include="Development">
        <script src="~/lib/datatable/js/jquery.dataTables.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    </environment>
    <script>
        $(document).ready(function () {
            $('#brandsTable').DataTable({
                "columnDefs": [
                    {
                        "targets": 2,
                        "orderable": false,
                        "searchable": false
                    }
                ]
            });;
        });
    </script>
}

@section datatablecss{
    <environment include="Development">
        <link href="~/lib/datatable/css/dataTables.bootstrap4.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    </environment>
}