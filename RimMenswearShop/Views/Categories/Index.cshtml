@model IEnumerable<Category>
@{
    ViewBag.Title = "Quản lý danh mục";
}
<a asp-controller="Categories" asp-action="Create" class="btn btn-dark mb-3"><i class="fa fa-plus"></i>Thêm danh mục</a>
<table class="table table-hover table-responsive table-bordered display w-100 d-block d-md-table" id="category">
    <thead>
        <tr class="thead-dark">
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId">@category.CategoryId</a>
                </td>
                <td>@category.Name</td>
                <td>
                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId" title="Chỉnh sửa" class="btn btn-dark">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{

    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script src="~/js/Category.js" asp-append-version="true"></script>
}

