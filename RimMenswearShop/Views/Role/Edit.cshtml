@model RimMenswearShop.ViewModels.Role.EditRoleViewModel
@{
    ViewData["Title"] = "Tạo Role";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Role" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" value="@Model.RoleId" />
            <div class="form-group">
                <label asp-for="NameRole" class="control-label">Tên Role</label>
                <input asp-for="NameRole" class="form-control" />
                <span asp-validation-for="NameRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" onclick="alert('Sửa vai trò thành công')" value="Sửa" class="btn btn-primary" />
                <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#deleteRole">
                    Xóa
                </button>
                <a class="btn btn-dark" asp-controller="Role" asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>
<!-- Button to Open the Modal -->


<!-- The Modal -->
<div class="modal" id="deleteRole">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Bạn có chắc chắn muốn xóa role này không ?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <a asp-controller="Role" class="btn btn-danger" onclick="alert('Đã xóa vai trò')" asp-action="Delete" asp-route-id="@Model.RoleId">Có</a>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>