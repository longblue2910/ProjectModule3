@model CreateUserViewModel
@{
    ViewBag.Title = "Tạo tài khoản";
    var roles = ViewBag.Roles as IQueryable<IdentityRole>;
}
<form class="form-signin" enctype="multipart/form-data" asp-controller="User" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-md-3">
            <label asp-for="Email">Email: </label>
        </div>
        <div class="col-md-9">
            <input asp-for="Email" class="form-control" placeholder="Nhập email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-3">
            <label asp-for="Phone">Số điện thoại: </label>
        </div>
        <div class="col-md-9">
            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>


    <div class="row form-group">
        <div class="col-md-3">
            <label asp-for="Password">Mật khẩu: </label>
        </div>
        <div class="col-md-9">
            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3">
            <label asp-for="ConfirmPassword">Xác nhận mật khẩu: </label>
        </div>
        <div class="col-md-9">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-3">
            <label asp-for="City">Tỉnh/Thành: </label>
        </div>
        <div class="col-md-9">
            <input asp-for="City" class="form-control" placeholder="Nhập tỉnh thành">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-3">
            <label asp-for="Address">Địa chỉ: </label>
        </div>
        <div class="col-md-9">
            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-3">
            <label asp-for="RolesID">Vai trò: </label>
        </div>
        <div class="col-md-9">
            <select asp-for="RolesID" class="custom-select">
                <option value="">Chọn vai trò</option>
                @if (roles != null && roles.Any())
                {
                    foreach (var role in roles)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            <button class="btn btn-dark" onclick="alert('Tạo thành viên thành công')" type="submit">Tạo tài khoản</button>
            <button class="btn btn-dark" asp-controller="User" asp-action="Index">Hủy</button>
        </div>
    </div>
</form>